[flake8]
# F403 -> don't complain about star (*) imports
# F405 -> don't complain about untraceable star import variables
ignore = F403,
	     F405
max-line-length = 120
exclude = .git,
          .cache,
          .circleci,
          .github,
          .idea,
          .vscode,
          __pycache__,
          config.example.py,
          config.py,
          config.example.yaml,
          config.yaml,
          .env,
          .venv,
          env,
          venv,
          env.bak,
          venv.bak,
          .DS_Store,
          .python-version,
          .tox,
          build,
          dist,
          .pyc
